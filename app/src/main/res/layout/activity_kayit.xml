<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Kayit">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/Gelenresim"
        android:layout_width="196dp"
        android:layout_height="200dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/backgraund"
        app:civ_border_color="@color/mavi"
        app:layout_constraintEnd_toEndOf="parent"
        app:civ_border_width="10dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/isimet"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/yuvarlakbeyazsert"
        android:ems="10"
        android:hint="Isim Giriniz"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Gelenresim" />

    <Spinner
        android:id="@+id/Cinsiyetspin"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/yuvarlakbeyazsert"
        android:layout_marginTop="8dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sehirspin" />

    <Spinner
        android:id="@+id/sehirspin"
        android:layout_width="200dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/yuvarlakbeyazsert"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/isimet" />

    <Spinner
        android:id="@+id/yilspin"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:background="@drawable/yuvarlakbeyazsert"

        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/Cinsiyetspin"
        app:layout_constraintTop_toBottomOf="@+id/Cinsiyetspin" />

    <Spinner
        android:id="@+id/gunspin"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:background="@drawable/yuvarlakbeyazsert"

        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintStart_toStartOf="@+id/Cinsiyetspin"
        app:layout_constraintTop_toBottomOf="@+id/Cinsiyetspin" />

    <Spinner
        android:id="@+id/ayspin"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/yuvarlakbeyazsert"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/Base.Theme.MaterialComponents.Light.DarkActionBar"
        app:layout_constraintEnd_toStartOf="@+id/yilspin"
        app:layout_constraintStart_toEndOf="@+id/gunspin"
        app:layout_constraintTop_toBottomOf="@+id/Cinsiyetspin" />

    <ImageView
        android:id="@+id/resimayarla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_photo_camera_white_48dp"
        app:layout_constraintBottom_toBottomOf="@+id/Gelenresim"
        app:layout_constraintEnd_toEndOf="@+id/Gelenresim" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/isimet"
        app:layout_constraintEnd_toStartOf="@+id/isimet"
        app:layout_constraintTop_toTopOf="@+id/isimet"
        app:srcCompat="@drawable/avatar" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/Cinsiyetspin"
        app:layout_constraintEnd_toStartOf="@+id/sehirspin"
        app:layout_constraintTop_toTopOf="@+id/Cinsiyetspin"
        app:srcCompat="@drawable/genderr" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/sehirspin"
        app:layout_constraintEnd_toStartOf="@+id/sehirspin"
        app:layout_constraintTop_toTopOf="@+id/sehirspin"
        app:srcCompat="@drawable/ic_add_location_white_36dp" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/gunspin"
        app:layout_constraintEnd_toStartOf="@+id/gunspin"
        app:layout_constraintTop_toTopOf="@+id/gunspin"
        app:srcCompat="@drawable/birthdaycake" />

    <Button
        android:id="@+id/kaydetbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/yuvarlakbeyazsert"
        android:text="Kaydet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/Progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>