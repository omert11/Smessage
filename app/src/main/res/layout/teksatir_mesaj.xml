<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:background="@color/tp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/Gelenmesaj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="@drawable/konusmabalonu_t"
        android:elevation="3dp"
        android:maxWidth="160dp"
        android:minHeight="40dp"
        android:minWidth="125dp"
        android:padding="10dp"
        android:textColor="@color/Beyaz"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/Gidenmesaj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="@drawable/konusmabalonu_m"
        android:elevation="3dp"
        android:maxWidth="160dp"
        android:minHeight="40dp"
        android:minWidth="125dp"
        android:padding="10dp"
        android:textColor="@color/Beyaz"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/OkundubilgisiImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginEnd="16dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/Gidenmesaj"
        app:layout_constraintEnd_toEndOf="@+id/Gidenmesaj"
        app:srcCompat="@drawable/ic_done_white_18dp" />


</LinearLayout>